;
; Test "begin" expressions.
;

(define unit unit (while #f 0))

(check-type (begin) unit)
(check-expect (begin) unit)
(check-type (begin 1) int)
(check-expect (begin 1) 1)
(check-type (begin unit 1) int)
(check-expect (begin unit 1) 1)
(check-expect (let ((test-val 0)) (begin (set test-val 1) test-val)) 1)
